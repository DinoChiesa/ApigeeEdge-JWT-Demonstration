<RaiseFault name="RF-MissingHeader">
    <FaultResponse>
        <Set>
            <Headers/>
            <Payload contentType="text/plain">Missing Authorization Header</Payload>
            <StatusCode>400</StatusCode>
            <ReasonPhrase>Bad Request</ReasonPhrase>
        </Set>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>
